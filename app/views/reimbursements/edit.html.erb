<% provide(:title, "Edit user reimbursement") %>
<% if logged_in? && current_user.admin? %>

<h1>Edit your reimbursement</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for [@user, @reimbursement], html: { multipart: true } do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :category %>
      <%= select(:reimbursement, :category, 
      [
        ['Food', "Food"], ['Transportation', "Transportation"], ['Miscellaneous', "Miscellaneous"], ['Expenses', "Expenses"]]
      )%>

      <%= f.label :description %>
      <%= f.text_area :description, placeholder: "Please input description.", class: 'form-control' %>
      

      <%= f.label :amount, "Amount" %>
      <%= f.text_field :amount, class: 'form-control' %>

      <%= f.file_field :avatar %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    
  </div>
</div>

<% end %>