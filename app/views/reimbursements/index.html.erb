<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>



    <div class="col-md-8">
            

            <h1> Reimbursements </h1>
            <h3><%= link_to "+Add new reimbursement?", new_user_reimbursement_path %></h3>
            <% if @user.reimbursements.any? %>
            
            <ol class="reimbursements">
            <%= render @reimbursements %>
            </ol>
            <%= will_paginate @reimbursements %>
            <% else %>
            
            
            <% end %>

    </div>

    
</div>

