<% provide(:title, "Add new reimbursement") %>
<% if logged_in? %>
<h1>Add new reimbursement</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(Reimbursement.new, url: user_reimbursements_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :category %>
      <%= select(:reimbursement, :category, 
      [['Food', "Food"], ['Transportation', "Transportation"], ['Miscellaneous', "Miscellaneous"], ['Expenses', "Expenses"], ['Uncategorized', "Uncategorized"]]) %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :amount, "Amount" %>
      <%= f.text_field :amount, class: 'form-control' %>

      
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    
  </div>
</div>

<% end %>

