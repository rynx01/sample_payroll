  <div class="container">
    <%= link_to "Intelimina", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>

          <% if logged_in? && current_user.admin? %>
          <li><%= link_to "New Account", signup_path %></li>
          <li><%= link_to "Employees", users_path %></li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Reimbursements <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Reimbursements", user_reimbursements_path(current_user) %></li>
              <li><%= link_to "Allowances", user_allowances_path(current_user) %></li>
              <li><%= link_to "+ Adjustments", user_dope_adjustments_path(current_user) %></li>
              <li><%= link_to "- Adjustments", user_nope_adjustments_path(current_user) %></li>
              
            </ul>
          </li>

          
          <li><%= link_to "Payrolls", payrolls_path if current_user.admin? %></li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
          

          <% elsif logged_in? && !current_user.admin? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Reimbursements <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Reimbursements", user_reimbursements_path(current_user) %></li>
              <li><%= link_to "Allowances", user_allowances_path(current_user) %></li>
              <li><%= link_to "+ Adjustments", user_dope_adjustments_path(current_user) %></li>
              <li><%= link_to "- Adjustments", user_nope_adjustments_path(current_user) %></li>
              
            </ul>
          </li>

          <li><%= link_to "Payslips", user_payslips_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>

        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>