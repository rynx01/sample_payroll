<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>



    <div class="col-md-8">
    
            <% if @user.allowances.any? %>
            <h1> Allowances </h1>
            <ol class="allowances">
            <%= render @allowances %>
            </ol>
            <% end %>
            

    </div>

    
</div>

