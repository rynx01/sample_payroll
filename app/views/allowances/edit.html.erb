<% provide(:title, "Edit user allowance") %>
<h1>Edit your allowance</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for [@user, @allowance] do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :description %>
      <%= f.text_area :description, placeholder: "Please input description.", class: 'form-control' %>
      

      <%= f.label :amount, "Amount" %>
      <%= f.text_field :amount, class: 'form-control' %>

      
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    
  </div>
</div>