<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>



    <div class="col-md-8">
    
            
            <h1> -Adjustments </h1>
            <h3><%= link_to "-Add new adjustments?", new_user_nope_adjustment_path %></h3>
            <% if @user.nope_adjustments.any? || @user.admin? %>
            
            <ol class="nope_adjustments">
            <%= render @nope_adjustments %>
            </ol>
            <%= will_paginate @nope_adjustments %>
            <% else %>
            
            
            <% end %>


    </div>

    
</div>

